\newcommand{\drawstack}[3]{%%
	\def\h{0.25}
	\def\w{0.5}
	
	\def\dx{#2}
	\def\dy{#3}
	
	\foreach \j [count=\hi from 0] in {#1}
	{
		\def\x{\dx}
		\def\y{\h + 2 * \h * \hi + \dy}
		\node [] at (\x, \y) {\j};
		\draw [] (\x - \w, \y + \h) rectangle (\x + \w, \y - \h);
	}
}

\newcommand{\drawqueue}[3]{%%
	\def\h{0.5}
	\def\w{0.25}
	
	\def\dx{#2}
	\def\dy{#3}
	
	\foreach \j [count=\wi from 0] in {#1}
	{
		\def\x{-\w - 2 * \w * \wi + \dx}
		\def\y{\dy}
		\node [] at (\x, \y) {\j};
		\draw [] (\x - \w, \y + \h) rectangle (\x + \w, \y - \h);
	}
}

